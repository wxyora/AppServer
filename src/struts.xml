<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
    <!--  <constant name="struts.objectFactory" value="spring"></constant>   -->

	<package name="default" namespace="/" extends="json-default">
		<action name="register" class="userInfoAction"  
			method="register">
			<result type="json">
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		<action name="findUserByMobile" class="userInfoAction"  
			method="findUserByMobile">
			<result type="json">
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		<action name="loginValidate" class="userInfoAction"  
			method="loginValidate">
			<result type="json">
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		<action name="getProductInfo" class="productInfoAction"  
			method="getProductInfo">
			<result type="json">
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		
	</package>

</struts>
